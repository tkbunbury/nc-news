{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object containing a single article",
    "queries": [],
    "exampleResponse": {
      "article": 
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "Article image url..."
        }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 1,
          "body": "Text from the article..",
          "article_id": 1,
          "author": "weegembump",
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for given article_id",
    "queries": [],
    "exampleResponse": {
      "comment": 
        {
          "comment_id": 99,
          "votes": 0,
          "author": "weegembump",
          "body": "New Comment...",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_id": 6
        }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article by article_id",
    "queries": [],
    "exampleResponse": {
      "updatedArticle": 
        {
          "article_id": 3,
          "title": "Eight pug gifs that remind me of mitch",
          "topic": "mitch",
          "votes": 20,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_img_url": "Article image url..."
        }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by comment_id",
    "queries": [],
    "exampleResponse": "Null"
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "Seafood substitutions are increasing",
          "name": "cooking",
          "article_img_url": "Article image url...",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  }
}
